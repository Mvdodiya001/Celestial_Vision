import os,shutil,random
from pathlib import Path
class DatasetSplitter:
    def __init__(self,source_dir,output_dir,split_ratio=(0.7,0.2,0.1),seed=42):
        self.source_dir=Path(source_dir);self.output_dir=Path(output_dir)
        self.train_ratio,self.test_ratio,self.eval_ratio=split_ratio
        self.seed=seed;assert sum(split_ratio)==1.0;random.seed(seed)
    def _create_dirs(self,class_name):
        [(self.output_dir/split/class_name).mkdir(parents=True,exist_ok=True) for split in ["train","test","eval"]]
    def _get_images(self,class_path):
        return [i for i in class_path.iterdir() if i.suffix.lower() in [".jpg",".jpeg",".png"]]
    def split(self):
        for class_dir in self.source_dir.iterdir():
            if not class_dir.is_dir():continue
            images=self._get_images(class_dir)
            if not images:continue
            random.shuffle(images);self._create_dirs(class_dir.name)
            t=len(images);a=int(t*self.train_ratio);b=a+int(t*self.test_ratio)
            splits={"train":images[:a],"test":images[a:b],"eval":images[b:]}
            for s,imgs in splits.items():
                for img in imgs:
                    shutil.copy2(img,self.output_dir/s/class_dir.name/img.name)
SOURCE_DATASET_DIR="/kaggle/input/your-dataset-name"
OUTPUT_DIR="./dataset"
DatasetSplitter(SOURCE_DATASET_DIR,OUTPUT_DIR).split()
